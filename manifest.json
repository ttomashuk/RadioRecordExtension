{
	"manifest_version": 2,
	"name": "Radio Record",
	"description": "Radio Record Player",
    "version": "1.0.0",
    
    "background": {
        "scripts": ["jquery.js", "background.js"]
    },

	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},
	"permissions": ["tabs", "activeTab","https://www.radiorecord.ru/*", "http://air.radiorecord.ru/*", "http://air2.radiorecord.ru/*"]
}